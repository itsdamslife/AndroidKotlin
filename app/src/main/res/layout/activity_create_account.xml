<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    tools:context=".activity.activities.LoginActivity">


    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="450dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        android:background="@color/colorAccent"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorAccent">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/chat_icon"
                android:contentDescription="chat logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="Create a new account" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/createAccDisplayNameText"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:textColor="#f0f7f4"
                    android:hint="Enter Display Name"
                    android:paddingBottom="2dp"
                    android:layout_marginTop="10dp"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/selector_bg_edit_2"
                    android:textCursorDrawable="@drawable/bg_input_cursor_2"
                    />

                <EditText
                    android:id="@+id/createAccEmailText"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:textColor="#f0f7f4"
                    android:hint="Enter Email"
                    android:paddingBottom="2dp"
                    android:layout_marginTop="10dp"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/selector_bg_edit_2"
                    android:textCursorDrawable="@drawable/bg_input_cursor_2"
                    />

                <EditText
                    android:id="@+id/createAccPasswordText"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:textColor="#f0f7f4"
                    android:hint="Enter Password"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="2dp"
                    android:inputType="textPassword"
                    android:background="@drawable/selector_bg_edit_2"
                    android:textCursorDrawable="@drawable/bg_input_cursor_2"
                    />

                <Button
                    android:id="@+id/createAccountPageButton"
                    android:background="@drawable/bt_shape"
                    android:layout_width="wrap_content"
                    android:text="Create Account"
                    android:stateListAnimator="@drawable/state_list_animator_z"
                    android:layout_height="44dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="20sp"
                    android:paddingRight="20sp"
                    android:layout_gravity="center"
                    android:textColor="#d3d3d3"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
